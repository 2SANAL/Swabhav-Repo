
@{
    Layout = null;
}
@using DepartmentMvcApp.Model;
@using DepartmentMvcApp.ResourceFiles
@model AddEmployeeViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Employee</title>
</head>
<body>
    @Html.ActionLink("Home", "Index", "Department")
    @Html.ActionLink("All Employee", "EmployeDetails", "Employee")

    <div>
        @using (@Html.BeginForm(FormMethod.Post))
        {
            <p>@EmployeeResourcesFile.Dname:@Html.DropDownListFor(model => model.DeptId, new SelectList(Model.Departments, "Id", "DepartmentName"), "- Please Select -")</p>
            <p>@EmployeeResourcesFile.EName:@Html.TextBoxFor(m => m.EmployeeName)</p>
            <p>@EmployeeResourcesFile.DOJ:@Html.TextBoxFor(m => m.DateOfJoin)</p>
            <p>@EmployeeResourcesFile.Job:@Html.TextBoxFor(m => m.Job)</p>
            <p>@EmployeeResourcesFile.COM:@Html.TextBoxFor(m => m.Comm)</p>
            <p>@EmployeeResourcesFile.SAL:@Html.TextBoxFor(m => m.Salary)</p>
            <input type="submit" value="Add">
        }
    </div>
</body>
</html>
